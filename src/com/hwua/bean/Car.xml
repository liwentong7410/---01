<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hwua.bean.Car" table="t_car">
        <id name="id" column="id">
            <generator class="increment"/><!-- 指定主键生成策略为自动增长 -->
        </id>
        <property name="cname" />
        <property name="ccolor" />
        <property name="cprice" /> 
        <property name="cdate" /> 
    </class>
    

</hibernate-mapping>
